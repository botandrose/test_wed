<%= render("layouts/errors", :object => @budget) %>

<%= form_for(@budget) do |f| %>
  <div class="form-group">
    <%= f.label :speculated_amount %>
    <%= f.text_field :speculated_amount %>
  </div>
  <div class="form-group">
    <%= f.label :saved %>
    <%= f.text_field :saved %>
  </div>
  <div class="form-group">
    <%= f.label :months_until %>
    <%= f.number_field :months_until %>
  </div>
  <div class="form-group">
    <%= f.label :monthly_savings %>
    <%= f.text_field :monthly_savings %>
  </div>
  <%= f.submit(:class => "btn btn-primary") %>
<% end %>